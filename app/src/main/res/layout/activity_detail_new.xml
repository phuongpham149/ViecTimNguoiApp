<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:contentDescription="@string/img_close_detail_new"
        android:layout_width="@dimen/img_close_detail_new"
        android:layout_height="@dimen/img_close_detail_new"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/img_close_detail_new_margin_right"
        android:layout_marginTop="@dimen/img_close_detail_new_margin_top"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgClose"
        android:layout_marginLeft="@dimen/ll_detail_new_margin"
        android:layout_marginRight="@dimen/ll_detail_new_margin"
        android:layout_marginTop="@dimen/ll_detail_new_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDateNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview.text.detail.new"
            android:textSize="@dimen/textview.text.date.detail.new.size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitletNewDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview_text_title_new_detail"
            android:textSize="@dimen/textview_text_title_new_detail_size" />

        <TextView
            android:id="@+id/tvDetailNewDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview_text_title_new_detail"
            android:textSize="@dimen/textview_text_title_new_detail_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_detail_new_height"
            android:layout_marginTop="@dimen/View_detail_new_margin_top"
            android:background="@drawable/bg_gradient" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_title_user_hider"
            android:background="@android:color/transparent"
            android:text="@string/textview_title_user_hider"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview_text_title_new_detail"
            android:textSize="@dimen/textview_text_title_user_hider_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUsernameNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_user_hider_margin_top"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview_text_title_new_detail"
            android:textSize="@dimen/textview_text_user_hider_size" />

        <TextView
            android:id="@+id/tvAddressUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_address_user_hider"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview_text_title_new_detail"
            android:textSize="@dimen/textview_text_user_hider_size" />

        <Button
            android:id="@+id/btnContact"
            android:layout_width="@dimen/button_contact_width"
            android:layout_height="@dimen/button_contact_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_contact_margin_top"
            android:background="@drawable/bg_btn_contact"
            android:textColor="@android:color/white"
            android:text="@string/button_contact_detail_new"
            android:textSize="@dimen/button_contact_text_size" />
    </LinearLayout>

</RelativeLayout>