<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/menu_header_padding_left_bottom"
    android:paddingLeft="@dimen/menu_header_padding_left_right"
    android:paddingRight="@dimen/menu_header_padding_left_right"
    android:paddingTop="@dimen/rl_register_header_height">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_title_username_header_menu" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_user_contact_margin_top" />
</LinearLayout>
