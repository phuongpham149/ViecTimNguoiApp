<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ll_detail_new_margin_top"
        android:orientation="vertical"
        android:paddingBottom="@dimen/textview_text_user_hider_margin_top"
        android:textStyle="bold">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_user_hider_margin_top"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/button_contact_text_size" />

        <TextView
            android:id="@+id/tvTimeCreate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/button_contact_text_size" />

        <CheckBox
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:button="@drawable/choice_user_contact"
            android:id="@+id/chkConfirm"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:id="@+id/viewLineBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@+id/rlMenuItem"
        android:layout_marginTop="3dp"
        android:background="#BFBFBF" />

</RelativeLayout>