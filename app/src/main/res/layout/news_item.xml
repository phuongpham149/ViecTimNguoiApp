<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ll_detail_new_margin_top"
    android:layout_marginRight="@dimen/ll_detail_new_margin_top">

    <RelativeLayout
        android:id="@+id/rlMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/textview_text_user_hider_margin_top"
        android:textStyle="bold">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_user_hider_margin_top"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/textview_text_name_job"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="@dimen/img_icon_size"
            android:layout_height="@dimen/img_icon_size"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="@dimen/img_icon_margin_top"
            android:src="@drawable/ic_map" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="@dimen/ll_login_margin"
            android:layout_marginTop="@dimen/rl_login_header_margin_top"
            android:layout_toRightOf="@+id/imgMap"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/button_contact_text_size" />

        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="@dimen/img_icon_size"
            android:layout_height="@dimen/img_icon_size"
            android:layout_below="@+id/imgMap"
            android:layout_marginTop="@dimen/img_icon_margin_top"
            android:src="@drawable/ic_alarm" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_marginLeft="@dimen/ll_login_margin"
            android:layout_marginTop="@dimen/textview_time_margin_top"
            android:layout_toRightOf="@+id/imgTime"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/button_contact_text_size" />

    </RelativeLayout>

    <View
        android:id="@+id/viewLineBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@+id/rlMenuItem"
        android:background="@color/textview_login" />

</RelativeLayout>