<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ll_detail_new_margin_top"
    android:layout_marginRight="@dimen/ll_detail_new_margin_top">

    <View
        android:id="@+id/viewLineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_gradient" />

    <RelativeLayout
        android:id="@+id/rlMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLineTop"
        android:layout_toLeftOf="@id/imgRight"
        android:layout_toStartOf="@id/imgRight"
        android:orientation="vertical"
        android:paddingBottom="@dimen/textview_text_user_hider_margin_top"
        android:textStyle="bold">

        <TextView
            android:id="@+id/tvDateNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_text_user_hider_margin_top"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_selector"
            android:textSize="@dimen/textview_text_user_hider_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitleNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateNew"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_selector"
            android:textSize="@dimen/button_contact_text_size" />

        <TextView
            android:id="@+id/tvDetailNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleNew"
            android:background="@android:color/transparent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_selector"
            android:textSize="@dimen/button_contact_text_size" />

        <CheckBox
            android:id="@+id/imgNewContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="top|end|center_vertical"
            android:layout_marginTop="@dimen/rl_login_header_margin_top"
            android:button="@drawable/selector_contact"
            android:clickable="true"
            android:padding="@dimen/view_height_dialog" />

    </RelativeLayout>

    <View
        android:id="@+id/viewLineBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlMenuItem"
        android:background="@drawable/bg_gradient"
        android:visibility="gone" />

</RelativeLayout>